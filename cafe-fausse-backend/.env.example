# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENVIRONMENT=development
# Options: development, production, testing
DEBUG=True

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Option 1: Full DATABASE_URL (recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/cafe_fausse

# Option 2: Individual connection parameters (for local development)
DB_HOST=localhost
DB_NAME=cafe_fausse
DB_USER=your_db_user
DB_PASS=your_db_password
DB_PORT=5432

# ============================================================================
# AUTHENTICATION
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION_HOURS=24
ADMIN_PASSWORD=CafeFausse2025!

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
EMAIL_ENABLED=True
EMAIL_ADDRESS=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
ADMIN_EMAIL=admin@cafefausse.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ============================================================================
# CAFE INFORMATION
# ============================================================================
CAFE_NAME=Caf√© Fausse
CAFE_PHONE=+1 (555) 123-4567
CAFE_ADDRESS=123 Digital Street, Virtual City, VC 12345

# ============================================================================
# BUSINESS RULES
# ============================================================================
TOTAL_TABLES=20
MIN_GUESTS_PER_RESERVATION=1
MAX_GUESTS_PER_RESERVATION=10

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=True
